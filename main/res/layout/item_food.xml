<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/collectionIdTextView"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="Collection ID:  "
        android:textStyle="italic" />

    <TextView
        android:id="@+id/documentIdTextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Meal Title:  "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/field1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients 1:  "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/field2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients 2:  "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/field3TextView"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="Ingredients 3:  "
        android:textStyle="bold" />

</LinearLayout>
