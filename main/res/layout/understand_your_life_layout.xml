<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_colour"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/understanding_your_life_header"
        android:layout_width="236dp"
        android:layout_height="70dp"
        android:text="Understanding Your Life"

        android:textAlignment="center"
        android:textColor="@color/text_colour"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:typeface="sans"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />



    <TextView
        android:id="@+id/how_busy_are_you"
        android:layout_width="329dp"
        android:layout_height="47dp"
        android:textSize="18sp"
        android:text="@string/how_busy_are_you"

        android:textAlignment="center"
        android:textColor="@color/text_colour"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535" />


    <TextView
        android:id="@+id/choose_how_much_equipment"
        android:layout_width="329dp"
        android:layout_height="47dp"
        android:textSize="18sp"
        android:text="@string/how_much_equipment_do_you_have"


        android:textAlignment="center"
        android:textColor="@color/text_colour"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <Button
        android:id="@+id/toOverview_understand_life_page"
        android:layout_width="182dp"
        android:layout_height="83dp"
        android:backgroundTint="@color/misc_colour"

        android:text="Back To Overview Page!"
        android:textColor="@color/header_colour"
        android:textSize="18sp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />

    <TextView
        android:id="@+id/haveNoEquipment"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_outline_box"
        android:textSize="16sp"

        android:text="NO Equipment \n (I train on the floor)"
        android:textAlignment="center"
        android:textColor="@color/accent_colour"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263" />

    <TextView
        android:id="@+id/haveSomeEquipment"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_outline_box"
        android:gravity="center"

        android:text="SOME Equipment \n (I have a few weights)"
        android:textAlignment="center"
        android:textColor="@color/accent_colour"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/haveAllEquipment"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_outline_box"
        android:textSize="16sp"

        android:text="ALL Equipment \n (I have a full gym)"
        android:textAlignment="center"
        android:textColor="@color/accent_colour"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />


    <TextView
        android:id="@+id/littleFreeTime"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_outline_box"
        android:text="I have LITTLE free time \n (Work is busy)"

        android:textAlignment="center"
        android:textColor="@color/accent_colour"
        android:textSize="16sp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.624" />


    <TextView
        android:id="@+id/moderateFreeTime"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_outline_box"
        android:gravity="center"

        android:text="I have MODERATE time \n (Few hours per day)"
        android:textAlignment="center"
        android:textColor="@color/accent_colour"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.718" />

    <TextView
        android:id="@+id/lotOfFreeTime"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_outline_box"
        android:text="I have A LOT OF free time \n (> 2 Hours daily>)"

        android:textAlignment="center"
        android:textColor="@color/accent_colour"
        android:textSize="16sp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812" />

    <Switch
        android:id="@+id/switchNoEquipment"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:text="NO Equipment"


        android:textAlignment="center"
        android:textColor="@color/header_colour"
        android:textSize="16sp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switchSomeEquipment"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:gravity="center"


        android:text="SOME Equipment"
        android:textAlignment="center"
        android:textColor="@color/header_colour"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switchAllEquipment"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:gravity="center"


        android:text="ALL Equipment"
        android:textAlignment="center"
        android:textColor="@color/header_colour"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switchLittleFreeTime"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:gravity="center"


        android:text="LITTLE Time"
        android:textAlignment="center"
        android:textColor="@color/header_colour"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switchModerateFreeTime"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:gravity="center"

        android:text="MODERATE Time"
        android:textAlignment="center"
        android:textColor="@color/header_colour"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.719"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switchLotOfFreeTime"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:gravity="center"

        android:text="A LOT OF Time"
        android:textAlignment="center"
        android:textColor="@color/header_colour"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</androidx.constraintlayout.widget.ConstraintLayout>